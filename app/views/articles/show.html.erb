<div align="center">
    <h2><%= @article.title %></h2>
</div>

<div class="container">
    <div class="row">
        <div class="well col-xs-8 col-xs-offset-2">
            Description: <%= @article.description %>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4 col-xs-offset-5">
            <span><%= link_to "Edit", edit_article_path(@article), class: "btn btn-md btn-primary" %></span>
            <span><%= link_to "Remove", @article, class: "btn btn-md btn-danger", method: :delete, data: { confirm: "Are you sure?" } %></span>
        </div>    
    </div>
</div>